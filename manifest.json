{
  "manifest_version": 2,
  "name": "Math Direction Fixer",
  "version": "1.0.0",
  "description": "Fixes the direction of math formulas in RTL text, making KaTeX and MathJax spans LTR.",
  
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}